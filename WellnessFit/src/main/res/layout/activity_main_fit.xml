<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F0F8FF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:padding="16dp">

        <!-- Shared header -->
        <include
            android:id="@+id/headerContainer"
            layout="@layout/shared_header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_wellnessfit"
            android:textSize="20sp"
            android:padding="8dp"
            android:gravity="center"
            />

        <!-- Shared weight and height form inputs -->
        <include
            android:id="@+id/formInputsContainer"
            layout="@layout/shared_form_inputs" />

        <Button
            android:id="@+id/btnCalcBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculate_bmi"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2196F3"/>

        <TextView
            android:id="@+id/resultBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="16dp" />

        <Button
            android:id="@+id/btnCalcWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/daily_water_intake"
            android:backgroundTint="#4CAF50"/>

        <TextView
            android:id="@+id/resultWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"/>
    </LinearLayout>
</ScrollView>
